@model IEnumerable<FB.Data.UserRole>

    @{
        ViewBag.Title = "Index";
    }

    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-responsive table-bordered table-dark table-striped table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role.RoleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Username)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role.RoleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Username)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { userId = item.UserId, roleId = item.RoleId }) |
                    @Html.ActionLink("Details", "Details", new { userId = item.UserId, roleId = item.RoleId }) |
                    @Html.ActionLink("Delete", "Delete", new { userId = item.UserId, roleId = item.RoleId })
                </td>
            </tr>
        }

    </table>
